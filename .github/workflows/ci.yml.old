name: CI

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main
  workflow_dispatch: {}

env:
  IMAGE_NAME: ghcr.io/joekky/provider-proxmox
  GO_VERSION: "1.21"
  GOLANGCI_VERSION: "v1.56.2"
  DOCKER_BUILDX_VERSION: "v0.8.2"

jobs:
  build-and-push:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      packages: write # Grant write permissions to packages

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Go
        uses: actions/setup-go@v4
        with:
          go-version: ${{ env.GO_VERSION }}

      - name: Build the provider
        run: |
          CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o provider ./cmd/provider

      - name: Package the provider
        run: |
          mkdir -p .work/crds
          cp -R package/crds/* .work/crds/
          cp package/crossplane.yaml .work/
          tar -czf .work/provider-proxmox.tar.gz -C .work .

      - name: Log in to GitHub Container Registry
        run: echo "${{ secrets.GITHUB_TOKEN }}" | docker login ghcr.io -u ${{ github.actor }} --password-stdin

      - name: Push the provider package
        run: |
          docker tag ghcr.io/joekky/provider-proxmox:latest
          docker push ghcr.io/joekky/provider-proxmox:latest

      - name: Logout from GitHub Container Registry
        run: docker logout ghcr.io
